# ===================== WEAVIATE CONFIGURATION =====================
# Weaviate vector database connection settings
WEAVIATE_HOST=localhost
WEAVIATE_PORT=8080
WEAVIATE_GRPC_PORT=50051

# ===================== FASTAPI CONFIGURATION =====================
# FastAPI application server settings
API_HOST=0.0.0.0
API_PORT=8000

# ===================== CORS CONFIGURATION =====================
# Allowed origins for CORS (comma-separated)
# Development: Use * for all origins
# Production: Specify exact origins like http://localhost:3000,https://yourdomain.com
CORS_ORIGINS=*

# ===================== API KEYS =====================
# Replace with your actual API keys

# Groq API Key for LLM inference
GROQ_API_KEY=your_groq_api_key_here

# HuggingFace API Token (optional)
HUGGINGFACEHUB_API_TOKEN=your_huggingface_token_here

# ===================== LANGSMITH CONFIGURATION =====================
# Optional: LangSmith tracing for debugging and monitoring
LANGSMITH_TRACING=false
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=your_langsmith_key_here
LANGSMITH_PROJECT=RAG-Backend

# ===================== APPLICATION SETTINGS =====================
# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
